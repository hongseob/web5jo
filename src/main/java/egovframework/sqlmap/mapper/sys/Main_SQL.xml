<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="main">

	<select id="getBbsCategory" parameterType="EgovMap" resultType="EgovMap">
		SELECT category FROM bbs_notice GROUP BY category
	</select>
	
	<select id="getBbsNotice" parameterType="EgovMap" resultType="EgovMap">
		SELECT * FROM bbs_notice where category = #{category}
	</select>
	
	<select id="getBbsNoticeInfo" parameterType="EgovMap" resultType="EgovMap">
		SELECT * FROM bbs_notice no = ${bid}
	</select>
	
	<select id="searchBbsNotice" parameterType="EgovMap" resultType="EgovMap">
		SELECT * FROM bbs_notice where like #{keyword}
	</select>

</mapper>





